docker.enabled = true

params {
    query = "Xanthomonas oryzae pv. oryzae"
}

process {
    withName: FETCH_XOO_ASSEMBLIES {
        cointainer = 'community.wave.seqera.io/library/entrez-direct_ncbi-datasets-cli:803ef2ef7c10175e'
    }
}

profiles {
    standard {
        process.executor = 'local'
    }

    cluster {
        process.executor = 'slurm'
        process.queue = 'short'
        process.memory = '64 GB'
        process.cpus = 32
    }
}
