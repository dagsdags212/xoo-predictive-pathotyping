docker.enabled = true

params {
    outdir = "$PWD/output"
    logs_dir = "$PWD/logs"
    reports_dir = "$PWD/reports"
}

profiles {
    standard {
        includeConfig './configs/local.config'
    }

    slurm {
        includeConfig './configs/slurm.config'
    }
}

report {
    enabled = true
    file = "$params.reports_dir/report.html"
}

manifest {
    name = 'dagsdags212/xoo-predictive-pathotyping'
    author = "Jan Emmanuel Samson'
    mainScript = 'main.nf'
    version = '0.1.0'
}
